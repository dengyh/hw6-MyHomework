extends layout

block content
	div(class="panel panel-primary")
		div.panel-heading 作业列表
		div.panel-body
			div.list-group
				for homework in homeworks
					a(href="/homework/#{homework._id}", class="list-group-item")
						h4(class="list-group-item-heading") #{homework.title} (#{homework.formatDeadline})
						p(class="list-group-item-text") #{homework.content}