doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/flat-ui/dist/css/flat-ui.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    //- link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    block style
  body
    nav(class="navbar navbar-default navbar-fixed-top")
      div.container
        div.navbar-header
          a(class="navbar-brand", href="/") My Homework
        div(class="collapse navbar-collapse")
          ul(class="nav navbar-nav navbar-left")
            li
              if user && user.role == 'teacher'
                a(href="/homework/create")
                  span.fui-plus-circle
                  span Add homework
          ul(class="nav navbar-nav navbar-right")
            li
              if user
                a(href="/logout")
                  span.fui-exit
                  span Logout
              else
                a(href="/login") Login
    block content

    script(type="application/javascript", src="http://localhost:35729/livereload.js")
    script(type="application/javascript", src="/jquery/dist/jquery.min.js")
    script(type="application/javascript", src="/flat-ui/dist/js/flat-ui.min.js")
    script(type="application/javascript", src="/javascript/base.js")

    block script
